{
    "name": "uptime-monitor",
    "version": "0.1.3",
    "type": "commonjs",
    "scripts": {
        "start": "concurrently -n web-client,backend -c green,blue \"next start\" \"npm:backend\"",
        "dev": "docker-compose -f docker-compose.dev.yml up -d --build && npm run docker-prepare && concurrently -n web-client,backend -c green,blue \"next dev\" \"npm:backend\"",
        "build": "next build",
        "lint": "next lint",
        "backend": "npx tsx src/backend/index.ts",
        "docker-prepare": "npx tsx init-db.ts",
        "docs": "cd ./docs && bundle install && bundle exec jekyll serve"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.19",
        "@headlessui/tailwindcss": "^0.2.0",
        "@lucia-auth/adapter-mysql": "^3.0.2",
        "@remixicon/react": "^4.2.0",
        "@tremor/react": "^3.16.1",
        "@types/mysql": "^2.15.26",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "lucia": "^3.2.0",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.45",
        "mysql2": "^3.9.7",
        "next": "^14.2.3",
        "next-auth": "^4.24.7",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^5.1.0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^20.11.30",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "concurrently": "^8.2.2",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "tsx": "^4.7.2",
        "typescript": "^5"
    }
}
