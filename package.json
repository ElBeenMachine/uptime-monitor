{
    "name": "uptime-monitor",
    "version": "0.2.1",
    "type": "commonjs",
    "scripts": {
        "start": "npx tsx init.ts && concurrently -n web-client,backend -c green,blue \"next start\" \"npm:backend\"",
        "dev": "tsx init.ts && concurrently -n web-client,backend -c green,blue \"next dev\" \"npm:backend\"",
        "build": "next build",
        "lint": "next lint",
        "backend": "npx tsx src/backend/index.ts",
        "docs": "cd ./docs && bundle install && bundle exec jekyll serve"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.19",
        "@headlessui/tailwindcss": "^0.2.0",
        "@lucia-auth/adapter-sqlite": "^3.0.1",
        "@remixicon/react": "^4.2.0",
        "@tremor/react": "^3.16.1",
        "@types/mysql": "^2.15.26",
        "bcryptjs": "^2.4.3",
        "better-sqlite3": "9.6.0",
        "dom-helpers": "^5.2.1",
        "dotenv": "^16.4.5",
        "lucia": "^3.2.0",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.45",
        "next": "^14.2.3",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^5.1.0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/better-sqlite3": "^7.6.10",
        "@types/node": "^20.11.30",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/uuid": "^9.0.8",
        "autoprefixer": "^10.0.1",
        "concurrently": "^8.2.2",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "tsx": "^4.7.2",
        "typescript": "^5"
    }
